{
    "version": "7.3",
    "data_api_version": "3.0",
    "routing_model": {
        "COUNSELLOR_SELECT": [
            "CONFIRM"
        ],
        "CONFIRM": []
    },
    "screens": [
        {
            "id": "COUNSELLOR_SELECT",
            "title": "Choose Counsellor",
            "data": {
                "department": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "image": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "Anand",
                            "title": "Anand",
                            "image": "https://i.ibb.co/R4h8Mbr2/850-1045-copy-comp.jpg"
                        },
                        {
                            "id": "Sachin",
                            "title": "Sachin",
                            "image": "https://i.ibb.co/R4h8Mbr2/850-1045-copy-comp.jpg"
                        }
                    ]
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "counsellor_form",
                        "children": [
                            {
                                "type": "Dropdown",
                                "label": "Select Counsellor",
                                "name": "department",
                                "data-source": "${data.department}",
                                "required": true
                            },
                            {
                                "type": "Footer",
                                "label": "Confirm",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "CONFIRM"
                                    },
                                    "payload": {}
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "CONFIRM",
            "title": "Confirmed",
            "terminal": true,
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "TextHeading",
                        "text": "Confirm Selection"
                    },
                    {
                        "type": "TextBody",
                        "text": "Please confirm your choice."
                    },
                    {
                        "type": "Footer",
                        "label": "Done",
                        "on-click-action": {
                            "name": "data_exchange",
                            "payload": {
                                "counsellor": "DEBUG_ID"
                            }
                        }
                    }
                ]
            }
        }
    ]
}