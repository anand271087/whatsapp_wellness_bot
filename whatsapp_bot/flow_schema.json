{
    "version": "7.3",
    "data_api_version": "3.0",
    "routing_model": {
        "COUNSELLOR_SELECT": []
    },
    "screens": [
        {
            "id": "COUNSELLOR_SELECT",
            "title": "Choose Counsellor",
            "terminal": true,
            "data": {
                "department": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "Anand",
                            "title": "Anand"
                        },
                        {
                            "id": "Sachin",
                            "title": "Sachin"
                        }
                    ]
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "counsellor_form",
                        "children": [
                            {
                                "type": "Dropdown",
                                "label": "Select Counsellor",
                                "name": "department",
                                "data-source": "${data.department}",
                                "required": true
                            },
                            {
                                "type": "Footer",
                                "label": "Done",
                                "on-click-action": {
                                    "name": "complete",
                                    "payload": {
                                        "counsellor": "${form.department}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}